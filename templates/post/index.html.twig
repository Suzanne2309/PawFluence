{% extends 'base.html.twig' %}

{% block title %}Liste des posts{% endblock %}

{% block body %}

<div class="w-full p-3 flex flex-col justify-center items-center">
    <h1 class="text-3xl font-bold underline">Liste des Posts</h1>

    <div class="listPost">
        <ul>
        {% for post in posts %}
            <li><a href="{{ path('show_post', {'id':post.id}) }}">{{ post }}</a> <a href="{{ path('delete_post', {'id':post.id}) }}">X</a>
        {% endfor %}</li>
        </ul>
    </div>

    {% if app.user %}
    <h2>Ajouter un post</h2>
    <a href="{{ path('add_post') }}">+</a>
    {% endif %}
</div>
{% endblock %}