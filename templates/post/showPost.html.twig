                <p>publié le {{ post.publicationDateFr }}</p>
            </article>
            <article class="cardContent">
                <h1>Détail du Post "{{ post }}"</h1>
                <p>{{ post.textuelContent }}</p>
            {% for tag in post.associatedTo %}
                <p class="tag">#{{ tag.tagName }}</p>
            {% endfor %}
            </article>
            {% if app.user %}
            <div class="btnInteractions">
                <a class="comment" href="{{ path('add_comment', {'id':post.id}) }}" aria-label="Ajouter un commentaire">
