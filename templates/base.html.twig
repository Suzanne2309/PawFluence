<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}PawFluence – Le réseau social qui soutient les animaux à chaque scroll{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="{{asset('css/style.css')}}">
        {# {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %} #}

        {# {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %} #}
    </head>

    <body>
        <header >
            <div class="logo_header">
                <a href="{{ path('app_home') }}">Pawfluence</a>
            </div>
            <nav class="nav_header">
                <ul class="list_header">
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a href="">Pour vous</a></li>
                    <li><a href="{{ path('app_post') }}">Explorer</a></li>
                    <li><a href="">Contact</a></li>
                </ul>
            </nav>
            <div class="searchBar">
                <p>Rechercher</p>
            </div>
            <div class="btn_registration_header">
                {% if app.user %}
                <a href="">Mon profil</a>
                <div class="btn_logout">
                    <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
                {% else %}
                <div class="login">
                    <a href="{{ path('app_login') }}">Connexion</a>
                </div>
                <div class="register">
                    <a href="{{ path('app_register') }}">Inscription</a>
                </div>
                {% endif %}
            </div>
        </header>

        {% block body %}{% endblock %}
        
        <footer>
            <div  class="logo_footer">
                <a href="{{ path('app_home') }}">Pawfluence</a>
            </div>
            <nav class="nav_footer">
                <ul class="list_footer">
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a href="">Pour vous</a></li>
                    <li><a href="{{ path('app_post') }}">Explorer</a></li>
                    <li><a href="">Contact</a></li>
                </ul>
            </nav>
            <div class="legal_mentions">
                <ul>
                    <li><a href="">@2025 Suzanne Pons</a></li>
                    <li><a href="">Confidentialités et cookies</a></li>
                    <li><a href="">Gestion conseils d'utilisation</a></li>
                </ul>
            </div>
            <div class="btn_registration_footer">
                {% if app.user %}
                <a href="">Mon profil</a>
                <a class="btn_logout" href="{{ path('app_logout') }}">Déconnexion</a>
                {% else %}
                <a class="login" href="{{ path('app_login') }}">Connexion</a>
                <a class="register" href="{{ path('app_register') }}">Inscription</a>
                {% endif %}
            </div>
        </footer>
    </body>
</html>
